<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

	<item android:state_enabled="false">
		<layer-list>
			<item>
				<shape>
					<gradient android:angle="90" android:endColor="@color/disabled_color" android:startColor="@color/disabled_color" android:type="linear" />

					<stroke android:width="1dp" android:color="#ecefe9" />

					<corners android:radius="4dp" />

					<padding android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="3dp" />
				</shape>
			</item>
			<item>
				<bitmap android:gravity="end" android:src="@drawable/ic_arrow_drop_down_black_24dp" />
			</item>
		</layer-list>
	</item>

	<item>

		<layer-list>
			<item>
				<shape>
					<gradient android:angle="90" android:endColor="@color/enabledColor" android:startColor="@color/enabledColor" android:type="linear" />

					<stroke android:width="1dp" android:color="@color/colorGray" />

					<corners android:radius="4dp" />

					<padding android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="3dp" />

				</shape>
			</item>
			<item>
				<bitmap android:gravity="end" android:src="@drawable/ic_arrow_drop_down_black_24dp" />
			</item>

		</layer-list>
	</item>

</selector>
